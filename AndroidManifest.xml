<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ar.com.glasit.rom"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10"/>

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.NETWORK"/>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <application
            android:allowBackup="true"
            android:theme="@style/AppTheme"
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:screenOrientation="portrait">
        <activity android:name="ar.com.glasit.rom.Activities.BootstrapActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="ar.com.glasit.rom.Activities.MenuActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/menu">
        </activity>
        <activity android:name="ar.com.glasit.rom.Activities.SetUpActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/setup">
        </activity>
        <activity android:name="ar.com.glasit.rom.Activities.MainActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name">
        </activity>
        <activity android:name="ar.com.glasit.rom.Activities.StartSessionActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name">
        </activity>
         <activity
            	  android:name="ar.com.glasit.rom.Activities.TablesActivity"
            	  android:label="@string/app_name" >
        </activity>
        <activity
                android:name="ar.com.glasit.rom.Activities.KitchenActivity"
                android:label="@string/app_name"
                android:screenOrientation="landscape">
        </activity>
        <activity android:name="ar.com.glasit.rom.Activities.TableDetailActivity"
                  android:screenOrientation="portrait"
                  android:uiOptions="splitActionBarWhenNarrow"
                  android:label="@string/tablelabel">
        </activity>
        <activity android:name="ar.com.glasit.rom.Activities.CameraActivity"
                  android:screenOrientation="portrait"
                  android:uiOptions="splitActionBarWhenNarrow"
                  android:label="@string/qrLabel">
        </activity>
    </application>
</manifest>
